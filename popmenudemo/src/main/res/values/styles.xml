<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="bsvw_pop_menu_anim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bsvw_anim_pop_menu_in</item>
        <item name="android:windowExitAnimation">@anim/bsvw_anim_pop_menu_out</item>
    </style>

    <style name="bsvw_pop_menu_anim_up" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/bsvw_anim_pop_menu_in_up</item>
        <item name="android:windowExitAnimation">@anim/bsvw_anim_pop_menu_out_up</item>
    </style>

</resources>
